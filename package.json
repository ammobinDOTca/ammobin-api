{
  "name": "ammobin-api",
  "version": "2.0.0",
  "description": "ammobin.ca api",
  "main": "./dist/api/index.js",
  "scripts": {
    "start": "node ./dist/api/index.js",
    "start:worker": "node ./dist/worker/index.js",
    "start:refresher": "node ./dist/refresher/index.js",
    "test:lint": "tslint ./src/**/*.ts",
    "test": "npm run test:lint && npm run build",
    "format": "pretty-quick",
    "build": "tsc",
    "dev": "ts-node-dev ./src/api/index.ts",
    "dev:worker": "ts-node-dev ./src/worker/index.ts",
    "dev:refresher": "ts-node-dev ./src/refresher/index.ts",
    "generate-types": "gql2ts graphql.gql > src/graphql-types.ts && sh export-graphql-types.sh"
  },
  "types": "dist/index.d.ts",
  "author": "Simon Ramsay",
  "license": "MIT",
  "dependencies": {
    "ammobin-classifier": "0.0.35",
    "apollo-server": "^2.6.2",
    "apollo-server-cache-redis": "^1.0.0",
    "apollo-server-hapi": "^2.6.2",
    "apollo-server-plugin-response-cache": "^0.2.6",
    "axios": "^0.19.0",
    "boom": "^7.3.0",
    "cheerio": "^1.0.0-rc.3",
    "delay": "^4.2.0",
    "fluent-logger": "^3.3.1",
    "graphql": "^14.3.1",
    "hapi": "^18.1.0",
    "jsonp": "^0.2.1",
    "moment": "^2.24.0",
    "node-cron": "^2.0.3",
    "redis": "^2.7.1",
    "rsmq-worker": "^0.5.2",
    "throat": "^5.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/graphql": "^14.2.0",
    "@types/hapi": "^18.0.2",
    "@types/moment": "^2.13.0",
    "gql2ts": "^1.10.1",
    "husky": "^3.0.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.0",
    "ts-node-dev": "^1.0.0-pre.39",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": " pretty-quick --staged && npm t"
    }
  }
}
