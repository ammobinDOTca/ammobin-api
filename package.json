{
  "name": "ammobin-api",
  "version": "1.0.0",
  "description": "ammobin.ca api",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/api/index.js",
    "start:worker": "node ./dist/worker/index.js",
    "start:refresher": "node ./dist/refresher/index.js",
    "test:lint": "tslint ./src/**/*.ts",
    "test": "npm run test:lint && npm run build",
    "format": "pretty-quick",
    "build": "tsc",
    "dev": "ts-node-dev ./src/api/index.ts",
    "dev:worker": "ts-node-dev ./src/worker/index.ts",
    "dev:refresher": "ts-node-dev ./src/refresher/index.ts",
    "generate-types": "gql2ts graphql.gql > src/graphql-types.ts && sh export-graphql-types.sh"
  },
  "types": "dist/index.d.ts",
  "author": "Simon Ramsay",
  "license": "MIT",
  "dependencies": {
    "ammobin-classifier": "0.0.32",
    "apollo-server": "^2.3.1",
    "apollo-server-cache-redis": "^0.3.0",
    "apollo-server-hapi": "^2.3.1",
    "axios": "^0.18.0",
    "boom": "^7.3.0",
    "cheerio": "^1.0.0-rc.2",
    "delay": "^4.1.0",
    "fluent-logger": "^3.2.3",
    "graphql": "^14.0.2",
    "hapi": "^17.8.1",
    "jsonp": "^0.2.1",
    "moment": "^2.23.0",
    "node-cron": "^2.0.3",
    "redis": "^2.7.1",
    "rsmq-worker": "^0.5.2",
    "throat": "^4.1.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "gql2ts": "^1.10.1",
    "husky": "^1.3.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": " pretty-quick --staged && npm t"
    }
  }
}
