{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "declaration": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "lib": ["DOM"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "~": ["./src"]
    }
  },
  "include": ["src/**/*"]
}
